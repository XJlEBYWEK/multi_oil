		// Steps Section 
		section.steps-section
			.container
				.row
					.col-12
						h2.section-title.steps-section__title Как начать пользоваться MultiOil

				.row
					.col-lg-4.col-md-5
						.steps-slider.swiper-container
							.swiper-wrapper
								.swiper-slide.steps-slider__slide
									.steps-slider__title Скачайте приложение с PlayMarket или AppStore

									picture.steps-slider__picture
										img.steps-slider__img(src="img/slider-img-1.png" srcset="img/slider-img-1@2x.png 2x" alt="alt")

								.swiper-slide.steps-slider__slide
									.steps-slider__title Зарегестрируйтесь

									picture.steps-slider__picture
										img.steps-slider__img(src="img/slider-img-1.png" srcset="img/slider-img-1@2x.png 2x" alt="alt")

								.swiper-slide.steps-slider__slide
									.steps-slider__title Купите топливо кликнув на бочку

									picture.steps-slider__picture
										img.steps-slider__img(src="img/slider-img-1.png" srcset="img/slider-img-1@2x.png 2x" alt="alt")

								.swiper-slide.steps-slider__slide
									.steps-slider__title Нажмите на кнопку "Создать талон для заправки"

									picture.steps-slider__picture
										img.steps-slider__img(src="img/slider-img-1.png" srcset="img/slider-img-1@2x.png 2x" alt="alt")

								.swiper-slide.steps-slider__slide
									.steps-slider__title Покажите код оператору АЗС и Ваша машина заправляется!

									picture.steps-slider__picture
										img.steps-slider__img(src="img/slider-img-1.png" srcset="img/slider-img-1@2x.png 2x" alt="alt")

						.swiper-pagination.steps-slider-pagination

					.col-lg-8.col-md-7
						.steps
							.steps-item.is-active(data-slide="1")
								.steps-item__number 01.
								.steps-item__title Скачайте приложение с PlayMarket или AppStore

							.steps-item(data-slide="2")
								.steps-item__number 02.
								.steps-item__title Зарегестрируйтесь

							.steps-item(data-slide="3")
								.steps-item__number 03.
								.steps-item__title Купите топливо кликнув на бочку

							.steps-item(data-slide="4")
								.steps-item__number 04.
								.steps-item__title Нажмите на кнопку "Создать талон для заправки"

							.steps-item(data-slide="5")
								.steps-item__number 05.
								.steps-item__title Покажите код оператору АЗС и Ваша машина заправляется!

